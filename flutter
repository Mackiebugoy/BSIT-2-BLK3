    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(
          title: Text('Material Design App'),
        ),
        body: Center(
          child: ElevatedButton(
            onPressed: () {
              // Button action
            },
            child: Text('Press Me'),
          ),
        ),
      ),
    );
  }
}


